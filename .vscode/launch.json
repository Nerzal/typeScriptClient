{
    "type": "node",
    "request": "launch",
    "name": "Mocha Current File",
    "cwd": "${workspaceRoot}",
    "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
    "args": [
      "--no-timeouts",
      "--colors",
      "${file}",
      "--require",
      "ts-node/register",
      "./tests/out"
    ],
    "console": "integratedTerminal",
    "sourceMaps": true,
    "outDir": "${workspaceRoot}/tests/out",
    "internalConsoleOptions": "neverOpen"
}
